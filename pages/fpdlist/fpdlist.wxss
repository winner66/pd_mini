.on {
  display: block;
}

.off {
  display: none;
}

.weui-search-bar__input {
  font-size: 12px;
}

.pd-icon {
  margin-right: 16px;
  vertical-align: middle;
  width: 25px;
  height: 25px;
}

.weui-media-box {
  padding: 1px;
  position: relative;
}

.weui-media-box__title {
  font-size: 12px;
}

.weui-media-box__desc {
  color: rgba(0, 0, 0, 0.966);
  font-size: 12px;
  padding-top: 0px;
}

/* .weui-media-box__title_in-text {
  margin-bottom: 10px;
} */

.weui-cells {
  margin-top: 2px;
}

.weui-grids {
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10px 5px 10px 5px;
  width: 33.333333%;
  box-sizing: border-box;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 25px;
  height: 25px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: rgba(0, 0, 0, 0.9);
  font-size: 12px;
  white-space: nowrap;
  text-overflow: clip;
  overflow: hidden;
}

.swiper{
  width:100%;
}

.swiper image{
  /* padding: 1px; */
  width:100%;
}

.weui-search-bar__input{
  font-size: 12px;
}

.pd-cell-label{
  word-wrap:break-word;
  word-break: break-all;
}
