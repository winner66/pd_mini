<view class="pd-split"></view>
  <block wx:for="{{pdClasses}}" wx:key="id" wx:for-index="idx" wx:for-item="clz">
    <view class="weui-panel__hd" style="background-color:rgba(200, 200, 200, 0.1)">{{clz.name}}</view>
    <view class="weui-grids">
      <block wx:for="{{clz.children}}" wx:key="id" wx:for-index="i" wx:for-item="c">
        <view class="weui-grid{{clz.children.length>=4?'4':''}}" hover-class="weui-grid_active" bindtap="pdClassTap" data-id='{{c.id}}' data-name="{{c.name}}" data-idx="{{i}}" data-opera="{{c.opera}}" data-url="{{c.fileUrl}}">
          <view>
            <image class="weui-grid__icon" src="{{context}}{{c.icon}}" />
          </view>
          <view class="weui-grid__label">{{c.name}}</view>
        </view>
      </block>
    </view>
  </block>
  <!-- 选项 -->
  <wux-cascader visible="{{visible}}" value="{{value}}" title="{{clzName}}" options="{{options}}" bind:close="casClose" bind:change="casChange" controlled="true" position="bottom" chooseTitle="{{chooseTitle}}"/>
